@import 'nib'

stateColors = blue yellow yellowgreen red
states = zeroState, firstState, secondState, thirdState
abs = absolute

html
	-webkit-font-smoothing: antialiased
	height 100% //1366px
	width 100% //1080px

fontSet()
	font-size 3.3em
	font-weight 900
	-text-stroke 1%
	-font-smoothing antialiased !important
	text-shadow 0 0 1px rgba(51,51,51,0.2)2
	font-family 'Merriweather' serif

backgroundSet()
	width 100%
	height 100%
	position absolute
	z-index -1

.one_page_main
	z-index -1
	position absolute

.page_container
	width 100%

.contentText
	padding-top 5em
	width 100%
	color black
	text-align center
	fontSet()

.footer
	bottom 0%
	position fixed
	height 4%
	width 100%

.first > .background
	width 20%
	background-image url('../img/header.svg')
	background-repeat no-repeat
	background-position 20em 0em
	background-size 100% 50%

.first > .background
	backgroundSet()

.second > .background
	backgroundSet()
	background-color rgb(255,79,0)

.third > .background
	backgroundSet()
	background-color rgb(61,182,241)