@import 'nib'
abs = absolute

html
	-webkit-font-smoothing: antialiased
	height 100% //1366px
	width 100% //1080px

@font-face
	font-family Bebas
	font-style normal
	src url(../fonts/bebas/BEBAS___.ttf)
	font-smoothing antialiased !important
	text-rendering optimizeLegibility

fontSet()
	font-size 3.8vw
	font-weight 900
	-text-stroke 1%
	text-shadow 0 0 1px rgba(51,51,51,0.2)2
	font-family Bebas
	word-spacing 15px
	letter-spacing 2px

backgroundSet()
	width 100%
	height 100%
	position absolute

.page_container
	width 100%

.contentText
	padding-left 3.5%
	width 100%
	color white
	text-align left
	fontSet()

.first .intro
	padding-top 7%

.second .infoBlock
	width 240px
	text-align center
	border-style solid
	border-width 4px
	border-radius 5px

.second .progress
	margin-left 2%
	margin-top 5%
	width 103%

.1lang > .meter
	width 50%

.second .2lang .progress .meter
	width 30%

.second .3lang .progress .meter
	width 50%

.second .4lang .progress .meter
	width 60%

.second .content
	margin-left 2%
	font-size 4vh

.second #Container .mix
	display none

.first > #first
	backgroundSet()
	z-index -1 !important
	opacity 0.6
	background-color #2c3e50

.first > #second
	background-image url('../img/alm-mountains.jpg')
	background-repeat no-repeat
	background-size 100%
	z-index -2 !important
	backgroundSet()

.second > .background
	z-index -1
	backgroundSet()
	background-color rgb(52, 152, 219)

.third > .background
	z-index -1
	backgroundSet()
	background-color rgb(61,182,241)